<p id="notice"><%= notice %></p>

<h1>Projects</h1>
<p>Ordenar por:</p>
<%=link_to 'propuesta', projects_path(state: 'Propuesta')%>
<%=link_to 'Progreso', projects_path(state: 'Progreso')%>
<%=link_to 'Terminado', projects_path(state: 'Listo')%>
<%=link_to 'default', projects_path%>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date start</th>
      <th>Date end</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.date_start %></td>
        <td><%= project.date_end %></td>
        <td><%= project.state %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
